server:
  host: "0.0.0.0"
  port: 8080

mqtt:
  broker: "tcp://localhost:1883"
  username: ""
  password: ""
  topics:
    grid_power: "energy/grid/power"
    hphc_state: "energy/tariff/state"

charging:
  max_total_current: 40.0          # Maximum total current for both stations (A)
  max_house_power: 12000.0         # Maximum house power consumption (W)
  smoothing_factor: 0.1            # Smoothing factor for grid power (lower = more smoothing)
  update_interval: 5               # DEPRECATED: PID now runs on MQTT messages (kept for watchdog)
  station1_priority: 1             # Priority for station1 (lower = higher priority)
  station2_priority: 2             # Priority for station2
  
  # PID Controller for grid regulation (HP mode only) - MQTT-driven
  pid_kp: 0.002                    # Proportional gain (A/W) - increased for faster response
  pid_ki: 0.0005                   # Integral gain (A/W/s) 
  pid_kd: 0.00002                  # Derivative gain (A*s/W)
  grid_target_power: 0.0           # Target grid power (W) - typically 0 for solar self-consumption